{% extends 'layouts/base-entite.html.twig' %}

{% block title %}
  S'enregistrer
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block body %}
  <div class="center">
    <div class="container">
      <h1 class="h3 mb-3 font-weight-normal">S'enregistrer</h1>
      <div class="form-group">
        {{ form_start(registrationForm) }}
          {{ form_row(registrationForm.email, {
              label: 'Email',
              'attr': {
                  'class': 'form-control',
                  'placeholder': 'Entrer votre email'
              }
            }) }}
          {{ form_row(registrationForm.plainPassword, {
              label: 'Mot de passe',
              'attr': {
                  'class': 'form-control mb-3',
                  'placeholder': 'Mot de passe'
              }
            }) }}
          {{ form_row(registrationForm.agreeTerms, {
              label: 'Accepter les termes'}) }}

          {{ form_row(registrationForm.role) }}
          
          <button type="submit" class="btn btn-light mt-2 mb-2">S'enregistrer</button>
        {{ form_end(registrationForm) }}
        <div>
          <p> Déjà un Compte ?</p>
          <a class="btn btn-link" href="{{ path('app_login') }}">Se Connecter</a>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
