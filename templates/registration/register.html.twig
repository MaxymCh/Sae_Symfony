{% extends 'layouts/base-entite.html.twig' %}

{% block title %}
  S'enregistrer
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block body %}
  <div class="center">
    <div class="container">
      <h1 class="h3 mb-3 font-weight-normal">S'enregistrer</h1>
      <div class="form-group">
        {{ form_start(registrationForm) }}
          {{ form_row(registrationForm.email) }}
          {{ form_row(registrationForm.plainPassword, {
              label: 'Password'
            }) }}
          {{ form_row(registrationForm.agreeTerms) }}

          <button type="submit" class="btn">S'enregistrer</button>
        {{ form_end(registrationForm) }}
        <div>
          <p> Déjà un Compte ?</p>
          <a class="btn btn-link" href="{{ path('app_login') }}">Se Connecter</a>
        </div>
      </div>
    </div>
  </div>
{% endblock %}